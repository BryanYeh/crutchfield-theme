[
  {
    "name": "theme_info",
    "theme_name": "Crutchfield Theme",
    "theme_version": "0.0.1",
    "theme_author": "BryanYeh",
    "theme_documentation_url": "https://github.com/BryanYeh/crutchfield-theme",
    "theme_support_url": "https://github.com/BryanYeh/crutchfield-theme"
  },
  {
    "name": "Notification Bar",
    "settings": [
      {
        "label": "Enable Notification",
        "id": "show_notification_bar",
        "type": "checkbox",
        "default": false
      },
      {
        "label": "Left Notification",
        "id": "notification_left",
        "type": "html",
        "default": "<a href='#'>12 reasons to shop with us | Crutchfield B2B ></a>",
        "info": "Display left side of notification bar"
      },
      {
        "label": "Middle Notification",
        "id": "notification_center",
        "type": "html",
        "default": "<a href='#' class='font-bold text-xl text-red-700 hover:text-black'>Free 2-day shipping to Caliornia <small class='font-normal text-xs'>See details</small></a>",
        "info": "Display middle of notification bar"
      },
      {
        "label": "Right Notification",
        "id": "notification_right",
        "type": "html",
        "info": "Display right side of notification bar"
      }
    ]
  },
  {
    "name": "Navigation Menu",
    "settings": [
      {
        "label": "Desktop",
        "id": "menu-desktop",
        "type": "link_list",
        "default": "main-menu"
      },
      {
        "label": "Mobile",
        "id": "menu-mobile",
        "type": "link_list",
        "default": "main-menu"
      }
    ]
  },
  {
    "name": "Predictive Search",
    "settings": [
      {
        "label": "Enable Predictive Search",
        "id": "enable_predictive_search",
        "type": "checkbox",
        "default": true
      }
    ]
  },
  {
    "name": "Account Access",
    "settings": [
      {
        "label": "Benefits",
        "id": "account_benefits",
        "type": "html",
        "default": "<div class='font-semibold text-lg'>Crutchfield account benefits</div><ul class='list-disc pl-4'><li>Earn 50 Free Rewards Points</li><li>Store billing and shipping info</li><li>Track your orders</li><li>Create and view a wishlist</li><li>Save your vehicle info</li></ul>",
        "info": "Will be displayed under Register/Login buttons"
      }
    ]
  },
  {
    "name": "Collection",
    "settings": [
      {
        "label": "Products per Page",
        "id": "products_per_page",
        "type": "range",
        "default": 20,
        "min": 1,
        "max": 50,
        "step": 1,
        "unit": "ppp"
      }
    ]
  }
]

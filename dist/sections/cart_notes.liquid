{%- if section.settings.enable_notes == true -%}
<div class="flex flex-col flex-wrap text-center mb-4">
    <div class="text-center text-2xl p-4">Add a note to your order</div>
    <textarea name="note" id="CartNote" class="border-gray-400 focus:border-blue-200 focus:outline-none shadow-md" rows="5">{{ cart.note }}</textarea>
</div>  
{%- endif -%}

{% schema %}
  {
    "name": "Notes",
    "settings": [
      {
        "id": "enable_notes",
        "type": "checkbox",
        "label": "Show Notes Field",
        "default": true
      }
    ]
  }
{% endschema %}
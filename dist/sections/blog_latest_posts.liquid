{% if section.settings.blog_name != blank %}
<div class="px-4 mx-auto text-center">
  <h2 class="font-semibold text-2xl underline">{{ section.settings.blog_header }}</h2>
</div>  
{% endif %}

<div class="px-4 md:px-0 py-4 mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4 container">
  {% for article in blogs[section.settings.blog_name].articles limit:section.settings.show_no_posts %}
    <div class="border border-gray-400 bg-white p-4 hover:border-red-500 flex flex-col">
      <div class="h-full">
        {% if article.image %}
          <img src="{{ article | img_url: 'large' }}" alt="{{ article.image.alt }}" class="w-full">
        {% endif %}
        <div class="font-bold py-2 text-lg">
          {{ article.title }}
        </div>
        <p class="pb-2">
          {{ article.excerpt_or_content | truncatewords: 50, '...' }}
        </p>
      </div>
      <p class="text-right text-sm"><a href="{{ article.url }}" class="p-2 inline-block hover:text-red-600 border border-gray-400 hover:border-red-600">Read More</a></p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Latest Posts",
  "settings": [
    {
      "type": "blog",
      "id": "blog_name",
      "label": "Blog"
    },
    {
      "type": "text",
      "id": "blog_header",
      "label": "Header",
      "default": "Latest Posts"
    },
    {
      "type": "range",
      "id": "show_no_posts",
      "min": 4,
      "max": 12,
      "step": 1,
      "label": "Number of posts",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "Latest Posts",
      "category": "Blog Post"
    }
  ]
}
{% endschema %}



{% if section.settings.blog_name != blank %}
<div class="px-4 mx-auto text-center">
  <h2 class="font-semibold text-2xl underline">{{ section.settings.blog_header }}</h2>
</div>  
{% endif %}

<div class="px-4 md:px-8 py-4 mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
  {% for article in blogs[section.settings.blog_name].articles limit:4 %}
    <div class="border border-gray-400 bg-white p-4 hover:border-red-500 flex flex-col">
      <div class="h-full">
        {% if article.image %}
          <img src="{{ article | img_url: 'large' }}" alt="{{ article.image.alt }}">
        {% endif %}
        <div class="font-bold">
          {{ article.title }}
        </div>
        <p>
          {% if article.excerpt.size > 0 %}
            {{ article.excerpt | truncate: 100 }}
          {% else %}
            <p>{{ article.content | strip_html | truncate: 100 }}</p>
          {% endif %}
        </p>
      </div>
      <p class="text-right text-red-600"><a href="{{ article.url }}">Read More</a></p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Blog - Multi",
  "settings": [
    {
      "type": "blog",
      "id": "blog_name",
      "label": "Blog"
    },
    {
      "type": "text",
      "id": "blog_header",
      "label": "Header",
      "default": "Latest Posts"
    }
  ],
  "presets": [
    {
      "name": "Blog - Multi",
      "category": "Blogs"
    }
  ]
}
{% endschema %}



<div class="border shadow w-10/12 md:w-6/12 lg:w-4/12 mx-auto p-8 my-4">
    {% form 'reset_customer_password' %}
        {% if form.errors %}
            <div class="bg-red-100 border-red-500 border-t-4 my-2 px-4 py-3 rounded-b shadow-md text-red-900" role="alert">
                <div class="flex">
                    <svg class="h-6 mr-4 text-red-500 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"></path></svg>
                    <div>
                        {{ form.errors | default_errors }}
                    </div>
                </div>
            </div>            
        {% endif %}

        <h1 class="text-center text-bold text-4xl uppercase pb-2">Reset Password</h1>

        <label for="password" class="text-gray-700 pt-2 font-medium block">Password</label>
        <input type="password" name="customer[password]" id="password" class="w-full border-gray-400 focus:border-blue-200 focus:outline-none shadow">

        <label for="password_confirmation" class="text-gray-700 pt-2 font-medium block">Confirm Password</label>
        <input type="password" name="customer[password_confirmation]" id="password_confirmation" class="w-full border-gray-400 focus:border-blue-200 focus:outline-none shadow pr-32">

        <input type="submit" value="Reset Password" class="bg-red-600 border border-red-600 font-semibold hover:bg-white hover:text-red-600 mt-4 px-4 py-2 text-lg text-white w-full cursor-pointer">
    {% endform %} 
</div>
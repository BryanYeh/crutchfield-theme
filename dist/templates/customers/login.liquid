{{ form.errors | default_errors }}
<div class="border shadow w-10/12 md:w-6/12 lg:w-4/12 mx-auto p-8 my-4" id="sign-in">
    <h1 class="text-center text-bold text-4xl uppercase pb-2">Sign In</h1>
    <form action="{{ routes.account_login_url }}" method="post">
        <label for="customer_email" class="text-gray-700 pt-2 font-medium block">Email Address</label>
        <input type="email" name="customer[email]" class="w-full border-gray-400 focus:border-blue-200 focus:outline-none shadow"/>

        <label for="customer_password" class="text-gray-700 pt-2 font-medium block">Password</label>
        <div class="relative">
            <input type="password" name="customer[password]" class="w-full border-gray-400 focus:border-blue-200 focus:outline-none shadow pr-32"/>
            <a href="#recover" class="recover-link absolute font-medium hover:text-red-600 inset-y-0 p-3 right-0 text-gray-700 text-sm">Forgot password?</a>
        </div>

        <input type="submit" value="Sign In" class="bg-red-600 border border-red-600 cursor-pointer font-semibold hover:bg-white hover:text-red-600 mt-4 px-4 py-2 text-lg text-white w-full" />   

        <div class="text-sm text-gray-700 mt-2">
            Don't have an account? <a href="{{ routes.account_register_url }}" class="text-red-600 hover:text-gray-600 font-semibold">Create an account</a>
        </div>     
    </form>
</div>

<div class="border shadow w-10/12 md:w-6/12 lg:w-4/12 mx-auto p-8 my-4 hidden" id="recover">
    <h1 class="text-center text-bold text-4xl uppercase pb-2">Password Recovery</h1>
    <form action="/account/receover" method="post">
        <label for="customer_email" class="text-gray-700 pt-2 font-medium block">Email Address</label>
        <input type="email" name="customer[email]" class="w-full border-gray-400 focus:border-blue-200 focus:outline-none shadow"/>

        <input type="submit" value="Submit" class="bg-red-600 border border-red-600 cursor-pointer font-semibold hover:bg-white hover:text-red-600 mt-4 px-4 py-2 text-lg text-white w-full" />   

        <div class="text-sm text-gray-700 mt-2">
            Back to <a href="{{ routes.account_login_url }}" class="text-red-600 hover:text-gray-600 font-semibold">Sign In</a>
        </div>     
    </form>
</div>
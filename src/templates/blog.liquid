{% paginate blog.articles by 12 %}
  <div class="px-4 md:px-8 py-4 mx-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mt-4">
    {% for article in blog.articles %}
      <div class="border border-gray-400 bg-white p-4 hover:border-red-500 flex flex-col">
        <div class="h-full">
          {% if article.image %}
            <img src="{{ article | img_url: 'large' }}" alt="{{ article.image.alt }}">
          {% endif %}
          <div class="font-bold">
            {{ article.title }}
          </div>
          <p>
            {% if article.excerpt.size > 0 %}
              {{ article.excerpt | truncate: 100 }}
            {% else %}
              <p>{{ article.content | strip_html | truncate: 100 }}</p>
            {% endif %}
          </p>
        </div>
        <p class="text-right text-red-600"><a href="{{ article.url }}">Read More</a></p>
      </div>
    {% endfor %}
  </div>

  <div class="pb-4 px-4 md:px-8 flex">
  {% for part in paginate.parts %}
    {% if part.is_link %}
      <a href="{{ part.url }}" class="px-4 py-2 border border-red-600 {% if forloop.last == false %} border-r-0 {% endif %} text-red-600 hover:bg-red-600  hover:text-white">{{ part.title }}</a>
    {% else %}
      <a class=" px-4 py-2 border border-red-600 {% if forloop.last == false %} border-r-0 {% endif %} text-red-600">{{ part.title }}</a>
    {% endif %}
  {% endfor %}  
  </div>
{% endpaginate %}
<div class="w-full mb-4">
  {% if section.settings.banner_url != blank %}
    <a href="{{ section.settings.banner_url }}">
      {% if section.settings.banner_image %}
        <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="{{ section.settings.banner_image.alt }}">
      {% else %}
        {{ 'lifestyle-1'  | placeholder_svg_tag }}
      {% endif %}
    </a>
  {% else %}
    {% if section.settings.banner_image %}
      <img src="{{ section.settings.banner_image | img_url: 'master' }}" alt="{{ section.settings.banner_image.alt }}">
    {% else %}
      {{ 'lifestyle-1'  | placeholder_svg_tag }}
    {% endif %}
  {% endif %}
</div>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "banner_url",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "name": "Banner",
      "category": "Image"
    }
  ]
}
{% endschema %}


